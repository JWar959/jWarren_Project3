extends layout.pug

block content
    if error
       p.text-danger=error

    div.container.mt-4
        h1.text-primary Sign Up
        p.text-muted Please select a username and password. Don't worry about complex rules here even 'helloworld' is fine!

        form(action='/signup', method='post')
            div.mb-3
                label.form-label(for='firstName') First Name
                input.form-control(type='text' name='firstName' placeholder = 'Enter your first name')

            div.mb-3
                label.form-label(for='lastName') Last Name
                input.form-control(type='text' name='lastName' placeholder = 'Enter your last name')
            
            div.mb-3
                label.form-label(for='usernameTemp') Username
                input.form-control(type='text' name='usernameTemp' placeholder = 'Enter your username')

            div.mb-3
                label.form-label(for='passwordTemp') Password
                input.form-control(type='password' name='passwordTemp' placeholder = 'Enter your password')

            div.mb-3
                label.form-label(for='confirmPassTemp') Confirm Password
                input.form-control(type='password' name='confirmPassTemp' placeholder = 'Re-enter your password')

            hr

            div.d-flex.flex-column
                button.btn.mb-2.btn-primary(type='submit' name='newUserSubmit') Sign up
                a.btn.btn-secondary(href='/') Nevermind
            br
        
        div.mt-3
            span Already have an account? 
            a(href='/login') Sign in here!