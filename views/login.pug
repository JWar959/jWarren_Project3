extends layout.pug

block content
    div.container.mt-4
        if created
            p.text-success #{created}
        if error
            p.text-danger #{error} 
        if loggedOut
            p.text-success #{loggedOut}
        if editDelete
            p.text-danger #{editDelete}

        h1.text-primary Sign In
        form(action='/login', method='post')
            div.mb-3
                label.form-label(for='username') Username
                div.col-md-4
                    input.form-control(type='text' name='username' placeholder='Enter your username' required)

            div.mb-3
                label.form-label(for='password') Password
                div.col-md-4
                    input.form-control(type='password' name='password' placeholder='Enter your password' required)

            div.d-flex.justify-content-start.gap-2  
                button.btn.btn-primary(type='submit') Sign in
                a.btn.btn-secondary(href='/') Nevermind
            br
        
        div.mt-3
            span Don't have an account yet? 
            a(href='/signup') Sign up here!
